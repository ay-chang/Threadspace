generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model User {
    id         String   @id @default(uuid()) @db.Uuid
    email      String   @unique
    name       String?
    provider   String
    providerId String   @unique
    createdAt  DateTime @default(now())
    updatedAt  DateTime @updatedAt

    @@map("users")
}

model Project {
    id          String   @id @default(uuid()) @db.Uuid
    ownerId     String
    name        String
    description String
    type        String
    createdAt   DateTime @default(now())
    updatedAt   DateTime @updatedAt

    @@map("projects")
}
